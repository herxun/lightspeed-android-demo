<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.lightspeeddemo"
    android:versionCode="1"
    android:versionName="1.0" >
	<support-ts-screen
	    android:anyDensity="false"
	    ></support-ts-screen>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

	<!-- Lightspeed推播需要的權限，包括開機自動啟動服務、讀取手機特徵碼、網路連線、SD卡寫入權限。 -->
	 <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	 <uses-permission android:name="android.permission.READ_PHONE_STATE" />
	 <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	 <uses-permission android:name="android.permission.INTERNET" />
	 <uses-permission android:name="android.permission.VIBRATE" />
	 <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	 <uses-permission android:name="android.permission.WAKE_LOCK"/>
	 
  
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_128x128"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- 指定使用推播服務的類型， 使用Lightspeed獨有服務時，則指定為“ARROWNOCK” -->
		<meta-data android:name="com.arrownock.push.SERVICE_TYPE" android:value="ARROWNOCK" />
		 
		<!-- 填入在新增App時的AppKey -->
		<meta-data android:name="com.arrownock.push.APP_KEY" android:value="QfpRap3iusW439GqIN81DZllFinuel0U"/>
		
        <activity
            android:name="com.demo.lightspeeddemo.MainActivity"
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		 
		 <activity
		     android:name="com.demo.lightspeeddemo.PushActivity"
		     android:screenOrientation="portrait" 
		     android:theme="@android:style/Theme.NoTitleBar"
		     ></activity>
 
		<!-- 宣告Lightspeed推播核心服務 -->
		<service android:name="com.arrownock.push.PushService" />
 
<!-- 下面三個receiver可以任選，來處理已經接收到的推播訊息 -->
 
<!--       Receiver 1：內建預設方案，包括顯示Payload中的Alert、Badge、Title、發出特定的聲音，以及是否震動等訊息通知。       開發人員則只需點擊的發送消息後，處理顯示的Activity。     -->
